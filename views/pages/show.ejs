<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="styles/reset.css" />
    <link rel="stylesheet" href="styles/base.css" />
    <link rel="stylesheet" href="styles/layout.css" />
    <link rel="stylesheet" href="styles/modules.css" />
    <!-- <link rel="stylesheet" href="styles/invert.css" /> -->
    <link href="https://fonts.googleapis.com/css?family=Anton&display=swap" rel="stylesheet">
    <title>Good Morning Application</title>
</head>
<body id="showBody">
        <section id = "left">
                <div class="icons" id="weather">Weather
                </div>
                <section class="displayLeft">
                            <p >
                                <%= weatherArray[0].forecast %>
                            </p>
                            <p class="c">
                                    <img src="<%= weatherArray[0].img_url %>">
                            </p>
                            <p><span>High: <%= weatherArray[0].tempHigh %> °F</span> <span>Low: <%= weatherArray[0].tempLow %> °F</span> </p>
        
                </section>
                <div class="icons" id="temp">Forecast</div>
                <section class="displayLeft" id="weatherData">
                    <% weatherArray.forEach(item => { %>
                            <h2 class="a">
                                <%= item.time %>
                            </h2>
                            <p class="b">
                                <%= item.averageTemp %> °F
                            </p>
                            <p class="c">
                                <img src="<%= item.img_url %>">
                            </p>
                            <% })%>
                </section>
            </section>

    <section id="right">
        <div class="icons" id="name">Good Morning Avrey</div>
        <div id="displayRight"></div>
        <div class="icons" >Local News</div>
        <section id="news" class="displayLeft">
            <% newNews.forEach(item => { %>
                <h2>
                    <%= item.imgurl %>
                </h2>
                <p>
                    <%= item.title %>
                </p>
                <p>
                    <%= item.description %>
                </p>
            <form action="/save/<%= item.id %>" method='get'>
                <button type="submit">Save Story</button>
            </form>
                <% })%>
        </section>
    </section>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script type="text/javascript" src="../app.js"></script>
</body>
</html>